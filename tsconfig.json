{
  "compilerOptions": {
      "baseUrl": "src",
      "allowSyntheticDefaultImports": true,
      "declaration": true,
      "declarationMap": true,
      "jsx": "react",
      "lib": ["DOM", "es6"],
      "module": "esnext",
      "moduleResolution": "node",
      "outDir": "dist",
      "paths": {
          // avoid ../../../../foo type import paths
          "/@/*": ["./*"],
      },
      "removeComments": true,
      "sourceMap": true,
      "strict": true,
      "target": "es2020",
      "types": [],
      // "typeRoots": ["node_modules/@types"],
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules/**/*", "dist"]
}
